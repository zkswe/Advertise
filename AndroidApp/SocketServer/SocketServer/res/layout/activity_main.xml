<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	 <Button
	     android:id="@+id/start_socketserver"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:onClick="onClick"
	     android:text="启动服务器" />
	
	 <TextView
	     android:id="@+id/server_status"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:text="服务器未启动，请先打开热点" />
	 
	 <TextView
	     android:id="@+id/connect_num"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:text="当前0个设备连接" />

    <Button
        android:id="@+id/add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="浏览图片" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="800px"
        android:layout_height="480px" />

    <Button
        android:id="@+id/push_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="推送图片" />

    <TextView
        android:id="@+id/push_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/add_upgrade_file"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="浏览升级包文件" />

    <TextView
        android:id="@+id/upgrade_file_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/push_upgrade_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="推送升级包" />

    <TextView
        android:id="@+id/push_upgrade_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>